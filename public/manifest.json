{
  "manifest_version": 3,
  "name": "Clippy-CSX",
  "version": "1.0.0",
  "description": "Copy more. Paste smarter.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Clippy"
  },
  "permissions": [
    "storage",
    "clipboardRead", 
    "clipboardWrite",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      }
    }
  }
}